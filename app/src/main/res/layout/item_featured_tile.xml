<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" >

        <data>
            <variable
                name="featured"
                type="com.example.marlonmoorer.streamkast.data.Featured"/>
            <variable
                name="handler"
                type="com.example.marlonmoorer.streamkast.listeners.OnPodcastClickListener"/>
        </data>


  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/grey_400"
      android:layout_margin="8dp"
      android:orientation="vertical"
      android:onClick="@{e->handler.onClick(featured.podcastId)}">

      <ImageView
          android:id="@+id/podcast_image"
          android:layout_width="120dp"
          android:layout_height="120dp"
          app:src="@{featured.imageUrl}"/>

      <TextView
          android:background="@color/black"
          android:textColor="@color/white"
          android:id="@+id/podcast_name"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:maxLines="2"
          android:textSize="14sp"
          android:padding="8dp"
          android:text="@{featured.name}"

           />
  </LinearLayout>

</layout>

